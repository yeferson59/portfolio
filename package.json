{
  "name": "frontend",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint \"src/**/*.{js,ts,astro}\" \"**/*.md\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,astro}\" \"**/*.md\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,astro}\" \"**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,astro}\" \"**/*.md\""
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@tailwindcss/vite": "4.1.14",
    "astro": "5.14.1",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@eslint/markdown": "7.3.0",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.7.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "9.37.0",
    "eslint-plugin-astro": "1.3.1",
    "globals": "16.4.0",
    "happy-dom": "^19.0.2",
    "jiti": "2.6.1",
    "vitest": "^3.2.4"
  }
}
