<footer class="footer">
  <div class="container">
    <div class="gap-xl grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
      <!-- Branding -->
      <div>
        <h3 class="text-accent mb-md text-2xl font-extrabold">
          Full-Stack Developer
        </h3>
        <p class="text-muted mb-lg text-sm leading-relaxed">
          Building scalable and resilient web applications. Specializing in
          robust backend systems, API design, and creating seamless user
          experiences from server to screen.
        </p>
        <div class="gap-sm flex">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                aria-label={social.label}
                class="icon hover-grow"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span set:html={social.icon} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4
          class="text-primary mb-md text-sm font-semibold tracking-wide uppercase"
        >
          Navigation
        </h4>
        <ul class="space-y-xs">
          {
            navigationLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-secondary hover:text-primary gap-xs flex items-center text-sm transition-colors"
                >
                  <div class="accent-dot accent-dot--secondary" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4
          class="text-primary mb-md text-sm font-semibold tracking-wide uppercase"
        >
          Services
        </h4>
        <ul class="space-y-xs">
          {
            services.map((service) => (
              <li class="text-secondary hover:text-primary text-sm transition-colors">
                {service}
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h4
          class="text-primary mb-md text-sm font-semibold tracking-wide uppercase"
        >
          Stay up to date
        </h4>
        <p class="text-secondary mb-md text-sm leading-relaxed">
          Subscribe to receive technical notes, architectural patterns, and
          posts on scalability.
        </p>
        <form class="space-y-sm">
          <input
            type="email"
            required
            placeholder="your@email.com"
            class="form-input text-sm"
          />
          <button type="submit" class="btn btn--primary btn--full btn--sm">
            Subscribe
          </button>
        </form>
        <p class="mt-sm text-muted text-xs leading-relaxed">
          No spam. Just useful technical content. You can unsubscribe at any
          time.
        </p>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div
      class="mt-xl pt-lg gap-md flex flex-col items-center justify-between border-t border-white/10 md:flex-row"
    >
      <p class="text-muted text-xs">
        Â© {year} Full-Stack Developer. All rights reserved.
      </p>
      <div class="gap-md text-muted flex items-center text-xs">
        <a href="/terms" class="hover:text-primary transition-colors">Terms</a>
        <a href="/privacy" class="hover:text-primary transition-colors"
          >Privacy</a
        >
        <a href="/licenses" class="hover:text-primary transition-colors"
          >Licenses</a
        >
      </div>
    </div>
  </div>
</footer>
