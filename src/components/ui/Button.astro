---
import { classNames } from "@/utils/classnames";

interface Props {
  variant?: "primary" | "secondary" | "ghost";
  size?: "sm" | "md" | "lg";
  type?: "button" | "submit" | "reset";
  href?: string;
  class?: string;
  fullWidth?: boolean;
  disabled?: boolean;
}

const {
  variant = "primary",
  size = "md",
  href,
  class: className = "",
  fullWidth = false,
  disabled = false,
} = Astro.props;

const classes = classNames(
  "btn",
  `btn--${variant}`,
  `btn--${size}`,
  fullWidth && "btn--full",
  className,
);

const Tag = href ? "a" : "button";
---

<Tag
  class={classes}
  href={href}
  disabled={disabled && !href}
  aria-disabled={disabled}
>
  <slot />
</Tag>
