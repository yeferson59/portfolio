---
import { classNames } from "@/utils/classnames";

interface Props {
  class?: string;
  hover?: boolean;
  variant?: "default" | "compact" | "raised";
}

const {
  class: className = "",
  hover = true,
  variant = "default",
} = Astro.props;

const classes = classNames(
  "card",
  variant === "compact" && "card--compact",
  variant === "raised" && "card--raised",
  hover && "hover-lift",
  className,
);
---

<div class={classes}>
  <slot />
</div>
