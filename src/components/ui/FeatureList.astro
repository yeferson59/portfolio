---
import { getCheckmarkIcon } from "@/utils/icons";

interface Props {
  title?: string;
  features: string[];
}

const { title = "Includes:", features } = Astro.props;
const iconHtml = getCheckmarkIcon();
---

<div class="feature-list">
  <h4 class="feature-list__title">{title}</h4>
  <ul class="feature-list__items">
    {
      features.map((feature, index) => (
        <li class="feature-list__item">
          <div
            class={`feature-list__icon ${index % 2 === 0 ? "feature-list__icon--primary" : "feature-list__icon--secondary"}`}
            set:html={iconHtml}
          />
          <span class="feature-list__text">{feature}</span>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .feature-list {
    margin-bottom: var(--space-xl);
    flex: 1;
  }

  .feature-list__title {
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
  }

  .feature-list__items {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-list__item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
  }

  .feature-list__icon {
    margin-top: 0.125rem;
    display: flex;
    height: 1.25rem;
    width: 1.25rem;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
  }

  .feature-list__icon--primary {
    background-color: rgba(42, 143, 255, 0.1);
    color: var(--color-primary);
  }

  .feature-list__icon--secondary {
    background-color: rgba(34, 176, 126, 0.1);
    color: var(--color-secondary);
  }

  .feature-list__text {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
  }
</style>
