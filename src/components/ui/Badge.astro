---
import { classNames } from "@/utils/classnames";

interface Props {
  variant?: "default" | "primary" | "secondary" | "success";
  class?: string;
}

const { variant = "default", class: className = "" } = Astro.props;

const classes = classNames(
  "badge",
  variant !== "default" && `badge--${variant}`,
  className,
);
---

<span class={classes}>
  <slot />
</span>
