---
import SectionHeader from "@/components/layouts/SectionHeader.astro";
import Card from "@/components/ui/Card.astro";
import Badge from "@/components/ui/Badge.astro";
import Button from "@/components/ui/Button.astro";
import { Image } from "astro:assets";
import { developer, skills, coreFeatures } from "@/data/site";
---

<section id="about" class="gradient-overlay">
  <div class="container">
    <SectionHeader title="About Me" subtitle={developer.description} />

    <div class="gap-xl grid grid-cols-1 items-start lg:grid-cols-3">
      <!-- Profile card -->
      <aside>
        <Card class="h-full text-center">
          <Image
            src={developer.avatar}
            alt="Avatar"
            class="avatar avatar--xl mb-lg mx-auto"
            loading="eager"
            width={128}
            height={128}
            decoding="async"
            fetchpriority="high"
            priority
          />

          <h3 class="text-primary mb-xs text-2xl font-bold">{developer.name}</h3>
          <p class="text-accent mb-lg font-semibold">{developer.title}</p>

          <p class="text-secondary mb-lg leading-relaxed">
            {developer.bio}
          </p>

          <div class="gap-xs flex flex-wrap justify-center">
            {skills.map((skill) => <Badge variant="primary">{skill}</Badge>)}
          </div>
        </Card>
      </aside>

      <!-- Features -->
      <div class="lg:col-span-2">
        <h2 class="text-primary mb-sm text-2xl font-bold">Core Principles</h2>
        <div class="gap-lg mb-xl grid grid-cols-1 sm:grid-cols-2">
          {
            coreFeatures.map((feature) => (
              <Card variant="compact">
                <div class="gap-md flex items-start">
                  <div class="mt-xs flex-shrink-0">
                    <div
                      class={`accent-dot ${feature.variant === "secondary" ? "accent-dot--secondary" : ""}`}
                    />
                  </div>
                  <div>
                    <h4 class="text-primary mb-sm text-lg font-bold">
                      {feature.title}
                    </h4>
                    <p class="text-secondary leading-relaxed">
                      {feature.description}
                    </p>
                  </div>
                </div>
              </Card>
            ))
          }
        </div>

        <!-- CTA section -->
        <Card>
          <div
            class="gap-lg flex flex-col lg:flex-row lg:items-center lg:justify-between"
          >
            <div>
              <h4 class="text-primary mb-sm text-xl font-bold">
                Collaboration Section
              </h4>
              <p class="text-secondary max-w-xl leading-relaxed">
                ü§ù Let‚Äôs Collaborate Got an idea or project? I can help define
                the architecture and bring it to production with scalable,
                secure, and observable practices.
              </p>
            </div>

            <div class="btn-group btn-group--center">
              <Button href="#projects">
                View Projects
                <svg
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </Button>
              <Button variant="secondary" href="#contact"> Contact </Button>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </div>
</section>
