---
import SectionHeader from "@/components/layouts/SectionHeader.astro";
import ProjectCard from "@/components/layouts/ProjectCard.astro";
import Button from "@/components/ui/Button.astro";
import { getAllProjects, getProjectStats } from "@/utils/projects";

// Get all projects using the utility function
const projects = await getAllProjects();

// Get project statistics for better content presentation
const stats = await getProjectStats();
---

<section id="projects">
  <div class="container">
    <SectionHeader
      title="Featured Projects"
      subtitle={`Showcasing ${stats.total} backend-focused projects: APIs, distributed systems, observability, and performance optimization.`}
    />

    <!-- Enhanced project summary with statistics -->
    <div class="mb-lg text-center">
      <p class="text-secondary text-sm">
        {stats.featured} featured • {stats.total} total projects •
        {stats.technologies.length} technologies • Categories: {
          Object.keys(stats.categoryDistribution).join(", ")
        }
      </p>
    </div>

    <div class="projects-grid mb-4xl">
      {
        projects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            stack={project.data.stack}
            year={project.data.year}
            status={project.data.status}
            href={project.data.href}
            featured={project.data.featured}
          />
        ))
      }
    </div>

    <div class="btn-container--xl text-center">
      <Button size="lg" href="#contact">
        Have a project in mind?
        <svg
          width="20"
          height="20"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </Button>
    </div>
  </div>
</section>
