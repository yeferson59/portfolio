---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  fullWidth?: boolean;
  disabled?: boolean;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href, 
  class: className = "",
  fullWidth = false,
  disabled = false
} = Astro.props;

const classes = [
  'btn',
  `btn--${variant}`,
  `btn--${size}`,
  fullWidth && 'btn--full',
  className
].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'button';
---

<Tag 
  class={classes}
  href={href}
  disabled={disabled && !href}
  aria-disabled={disabled}
>
  <slot />
</Tag>
