---
import "@/styles/main.css";
import Header from "@/components/layouts/Header.astro";
import Footer from "@/components/layouts/Footer.astro";
import ScrollReveal from "@/components/layouts/ScrollReveal.astro";
import Head from "@/components/layouts/Head.astro";
import type { Props as HeadProps } from "@/components/layouts/Head.astro";

export interface Props {
  /**
   * Head component props for SEO and metadata
   */
  head?: HeadProps;
}

const { head = {} } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head {...head} />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
    <ScrollReveal />
  </body>
</html>
