---
import Layout from "@/layouts/Layout.astro";

// Example of a private/admin page that should NOT be indexed by search engines
const head = {
  title: "Admin Dashboard",
  description: "Internal administration panel - restricted access only.",
  noindex: true, // Prevent search engine indexing
  nofollow: true, // Prevent following links on this page
  robots: {
    noarchive: true, // Don't cache this page
    noimageindex: true, // Don't index any images
    nocache: true, // Don't cache content
  },
  // No structured data needed for private pages
  keywords: [], // No SEO keywords for private pages
};
---

<Layout {head}>
  <div class="container mx-auto max-w-4xl py-12">
    <header class="mb-8">
      <h1 class="text-primary mb-4 text-4xl font-bold">Admin Dashboard</h1>
      <div class="card card--compact mb-6">
        <div
          class="rounded-lg border border-yellow-500/20 bg-yellow-500/10 p-4"
        >
          <div class="flex items-center gap-3">
            <div class="icon icon--secondary">
              <svg
                width="20"
                height="20"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-yellow-600">
                Private Page Example
              </h3>
              <p class="text-sm text-yellow-600/80">
                This page demonstrates non-indexable content configuration.
              </p>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="space-y-6">
      <div class="card">
        <h2 class="text-primary mb-4 text-2xl font-bold">SEO Configuration</h2>
        <div class="space-y-4">
          <div
            class="flex items-center justify-between border-b border-white/10 py-2"
          >
            <span class="text-secondary">Search Engine Indexing</span>
            <span class="badge badge--secondary">Disabled (noindex)</span>
          </div>
          <div
            class="flex items-center justify-between border-b border-white/10 py-2"
          >
            <span class="text-secondary">Link Following</span>
            <span class="badge badge--secondary">Disabled (nofollow)</span>
          </div>
          <div
            class="flex items-center justify-between border-b border-white/10 py-2"
          >
            <span class="text-secondary">Page Archiving</span>
            <span class="badge badge--secondary">Disabled (noarchive)</span>
          </div>
          <div
            class="flex items-center justify-between border-b border-white/10 py-2"
          >
            <span class="text-secondary">Image Indexing</span>
            <span class="badge badge--secondary">Disabled (noimageindex)</span>
          </div>
          <div class="flex items-center justify-between py-2">
            <span class="text-secondary">Content Caching</span>
            <span class="badge badge--secondary">Disabled (nocache)</span>
          </div>
        </div>
      </div>

      <div class="card">
        <h2 class="text-primary mb-4 text-2xl font-bold">
          Generated Robots Meta Tag
        </h2>
        <div class="rounded-lg bg-slate-800 p-4">
          <code class="font-mono text-sm text-green-400">
            &lt;meta name="robots" content="noindex, nofollow, noarchive,
            noimageindex, nocache" /&gt;
          </code>
        </div>
        <p class="text-secondary mt-3 text-sm">
          This tells search engines to completely ignore this page and its
          content.
        </p>
      </div>

      <div class="card">
        <h2 class="text-primary mb-4 text-2xl font-bold">
          Use Cases for Non-Indexable Pages
        </h2>
        <ul class="text-secondary space-y-2">
          <li class="flex items-start gap-2">
            <div class="accent-dot mt-2 flex-shrink-0"></div>
            <span>Admin dashboards and control panels</span>
          </li>
          <li class="flex items-start gap-2">
            <div class="accent-dot mt-2 flex-shrink-0"></div>
            <span>User account settings and private pages</span>
          </li>
          <li class="flex items-start gap-2">
            <div class="accent-dot mt-2 flex-shrink-0"></div>
            <span>Development and staging environments</span>
          </li>
          <li class="flex items-start gap-2">
            <div class="accent-dot mt-2 flex-shrink-0"></div>
            <span>Internal documentation and tools</span>
          </li>
          <li class="flex items-start gap-2">
            <div class="accent-dot mt-2 flex-shrink-0"></div>
            <span>Thank you pages and confirmation screens</span>
          </li>
          <li class="flex items-start gap-2">
            <div class="accent-dot mt-2 flex-shrink-0"></div>
            <span>Checkout and payment processing pages</span>
          </li>
        </ul>
      </div>

      <div class="text-center">
        <a href="/" class="btn btn--primary">
          Back to Homepage
          <svg
            width="16"
            height="16"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</Layout>
